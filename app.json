{
  "expo": {
    "name": "RitzYard Seller",
    "slug": "ritzyard-seller",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "ritzyard-seller",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#C94F31"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ritzyard.seller"
    },
    "android": {
      "package": "com.ritzyard.seller",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload product images and company logos.",
          "cameraPermission": "The app needs access to your camera to take product photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "2d8decc1-0de1-4926-b231-e0680d5432aa"
      }
    }
  }
}
